{
  "expo": {
    "name": "EpiCircle",
    "slug": "epicircle",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E8B57"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.epicircle.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E8B57"
      },
      "package": "com.epicircle.app",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "epicircle",
    "description": "Turning Scrap into Treasure - Connect with eco-warriors for sustainable scrap collection"
  }
}
